@model IEnumerable<EquipmentCheckout.Models.Equipment>

@{
    ViewBag.Title = "Calendar";
}

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                theme: true,
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: ''
                },

                defaultView: 'month',
                editable: true,
                allDaySlot: false,
                selectable: true,
                events: "/home/getevents/"
            })
        });
    </script>

}


<h1>Equipment Checkout Calendar</h1>

<div class="row">

    <div class="col-md-12">
        <div id="calendar"></div>
    </div>

</div>

